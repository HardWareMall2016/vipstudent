<?xml version="1.0" encoding="UTF-8"?>  
<!-- 底部圆角 白色背景 灰色边框 长方体 -->  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">  
    <item>  
        <shape>  
            <solid android:color="@color/divider_color" />
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="0.1dp"  
                android:bottomRightRadius="@dimen/bbuton_rounded_corner_radius" android:bottomLeftRadius="@dimen/bbuton_rounded_corner_radius" />  
            <stroke android:width="1px" android:color="@color/divider_color" />
        </shape>  
    </item>  
    <item android:top="0dp" android:bottom="1dp" android:left="0dp" android:right="0dp">  
        <shape>  
            <solid android:color="#ffffffff" />
            <corners android:topLeftRadius="0.1dp" android:topRightRadius="0.1dp"  
                android:bottomRightRadius="@dimen/bbuton_rounded_corner_radius" android:bottomLeftRadius="@dimen/bbuton_rounded_corner_radius" />  
            <stroke android:width="1px" android:color="#ff9e9c9c" />
        </shape>  
    </item>  
</layer-list>  